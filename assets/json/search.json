---
layout: none
---
{%- 
	assign all_pages = site.pages 
	| where_exp: "item", "item.redirect_to == nil"
	| sort: "date" 
	| reverse 
-%}
[
{% for page in all_pages %}
{%- assign dir = page.dir | split: "/" -%}
{%- unless dir[1] == "demo" or dir[1] == "assets" or page.title == nil -%}
{
"title"    : "{{ page.title | escape }}",
"url"      : "{{ page.url | relative_url}}",
"date"     : "{{ page.date }}",
"name"     : "{{ page.name }}{{ page.extname }}",
"content"  : {{ page.content | strip_html | strip_newlines | remove_chars | remove: '“' | remove: '”' | escape | jsonify }}
} {% unless forloop.last %},{% endunless %}
{% endunless %}
{% endfor %}
]