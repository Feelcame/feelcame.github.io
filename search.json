---
layout: none
---
{%- 
	assign all_pages = site.pages 
	| where_exp: "item", "item.extname contains 'json'"
	| where_exp: "item", "item.name != 'redirect.html'"
	| where_exp: "item", "item.redirect_to == nil"
	| sort: "date" 
	| reverse 
-%}
[
{% for page in all_pages %}
{%- assign parent_dir = page.dir | split: "/" -%}
{%- unless parent_dir[1] == "demo" -%}
{
"title"    : "{{ page.title | escape }}",
"url"      : "{{ site.baseurl }}{{ page.url }}",
"date"     : "{{ page.date }}",
"name"     : "{{ page.name }}",
"content"  : {{ page.content | strip_html | strip_newlines | remove_chars | escape | jsonify }}
} {% unless forloop.last %},{% endunless %}

{% endunless %}
{% endfor %}
]