---
layout: none
---
{%- assign directory = "/demo/search/" -%}  
{%- assign all_pages = site.pages 
	| where_exp: "item", "item.pin != 0"
	| where_exp: "item", "item.name != 'redirect.html'"
	| sort: "date" 
	| reverse 
-%}
{%- comment -%}where: "dir",  directory{%- endcomment -%}
[
  {% for page in all_pages %}
   {
	"title"    : "{{ page.title | escape }}",
	"url"      : "{{ site.baseurl }}{{ page.url }}",
	"date"     : "{{ page.date }}",
	"content"  : {{ page.content | strip_html | strip_newlines | remove_chars | escape | jsonify }}
   } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]